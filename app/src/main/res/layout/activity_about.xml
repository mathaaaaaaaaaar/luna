<?xml version="1.0" encoding="utf-8"?>
<!-- activity_about.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        android:elevation="3dp"
        android:minHeight="?attr/actionBarSize">


        <ImageView
            android:id="@+id/text_logo"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_logo_text" />


    </androidx.appcompat.widget.Toolbar>


    <TextView
        android:id="@+id/app_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Luna is a women's health app that helps to keep track of your period. It predicts when your next period is due and provides a chat feature where you can interact with an AI model to gain more information."
        android:textSize="16sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"/>

    <TextView
        android:id="@+id/additional_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Additional Details"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@id/app_description"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textColor="#f784b7"/>

    <TextView
        android:id="@+id/details_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Helps predict menstrual cycle\nProvides health-related journals\nChat with AI for more information"
        android:textSize="16sp"
        android:layout_below="@id/additional_details"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
